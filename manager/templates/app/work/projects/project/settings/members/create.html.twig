{% extends 'base.html.twig' %}

{% block title %}Create{% endblock %}


{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ path('work.projects') }}">Projects</a></li>
        <li class="breadcrumb-item">
            <a href="{{ path('work.projects.project',{ 'id': project.id}) }}">{{ project.name }}</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('work.projects.project.settings.departments',{ 'project_id': project.id}) }}">Departments</a>
        </li>
        <li class="breadcrumb-item active">Create</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-success">Assign</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}